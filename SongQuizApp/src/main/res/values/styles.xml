<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomButton" parent="android:Widget.Button">
        <item name="enforceTextAppearance">false</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="ChoosePlayerDelItemBtn" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>


    <style name="ChoosePlayerTitle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ChoosePlayerNameTextViewItem" parent="@android:style/Widget.TextView" >
        <item name="android:textSize" >20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SettingsSpinnerTextViewItem" parent="@android:style/Widget.TextView" >
        <item name="android:textSize" >22sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SettingsTextView" parent="@android:style/Widget.TextView" >
        <item name="android:textSize" >20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SettingsTextViewDisc" parent="@android:style/Widget.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="SettingsTopicCheckedBox" parent="@android:style/Widget.TextView">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="GameTopicTextView" parent="@android:style/Widget.TextView">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="GameTopicNumberTextView" parent="@android:style/Widget.TextView">
        <item name="android:textSize">55sp</item>
        <item name="android:textColor">@color/transparent_grey</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="GameScoreTextView" parent="@android:style/Widget.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TimerTimeTextView" parent="@android:style/Widget.TextView">
        <item name="android:textSize">50sp</item>
    </style>


</resources>